<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WebViewDialogActivityTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowFixedWidthMajor">@dimen/dialog_width_landscape</item>
        <item name="windowFixedWidthMinor">@dimen/dialog_width_portrait</item>
        <item name="windowFixedHeightMajor">@dimen/dialog_height_portrait</item>
        <item name="windowFixedHeightMinor">@dimen/dialog_height_landscape</item>
    </style>

</resources>
